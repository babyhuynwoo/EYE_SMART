<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FA437254"/> <!-- 눌렸을 때 배경색 -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- 테두리 색상 검정 -->
            <corners android:radius="4dp"/> <!-- 모서리 둥글기 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 기본 배경색 (하얀색) -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- 테두리 색상 검정 -->
            <corners android:radius="4dp"/> <!-- 모서리 둥글기 -->
        </shape>
    </item>
</selector>