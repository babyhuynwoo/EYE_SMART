<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 상단 Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme" />

    <!-- 아이트래킹 관련 뷰 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- GazePointView를 배경으로 설정 -->
        <com.example.eye_smart.gaze_utils.GazePoint
            android:id="@+id/gazePointView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 중간 LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 왼쪽 LinearLayout (3 비율) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="8dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="선택된 텍스트가 여기에 표시됩니다."
                    android:textSize="30sp"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:background="#00FFFFFF"
                    android:padding="8dp"
                    android:paddingTop="12dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical|start" />
            </LinearLayout>

            <!-- 오른쪽 LinearLayout (1 비율) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- 하단 Toolbar에 커스텀 LinearLayout 추가 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 페이지"
                android:layout_gravity="start|center_vertical"
                android:padding="16dp"
                android:textColor="@android:color/white"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 페이지"
                android:layout_gravity="end|center_vertical"
                android:padding="16dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>
